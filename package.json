{
  "name": "akunify",
  "private": true,
  "scripts": {
    "prepare": "zx ./scripts/prepare.js --quiet",
    "dev": "next dev",
    "build": "next build",
    "postbuild": "zx ./scripts/postbuild.js --quiet",
    "start": "next start",
    "lint": "eslint $(git diff --diff-filter=d --name-only HEAD^ -- '***.js' '***.jsx' '***.ts' '***.tsx')",
    "format": "prettier --write $(git diff --diff-filter=d --name-only HEAD^ -- '***.js' '***.jsx' '***.ts' '***.tsx')",
    "format:all": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "format:check": "prettier --check $(git diff --diff-filter=d --name-only HEAD^ -- '***.js' '***.jsx' '***.ts' '***.tsx')",
    "format:check:all": "prettier --check \"**/*.{js,jsx,ts,tsx}\"",
    "type:check": "tsc"
  },
  "dependencies": {
    "@headlessui/react": "^1.4.3",
    "@heroicons/react": "^1.0.5",
    "axios": "^0.24.0",
    "crypto-js": "^4.1.1",
    "dayjs": "^1.10.7",
    "dotenv": "^10.0.0",
    "next": "^12.1.0",
    "nookies": "^2.5.2",
    "nprogress": "^0.2.0",
    "postcss-import": "^14.0.2",
    "query-string": "^7.0.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-markdown": "^8.0.0",
    "rehype-raw": "^6.1.1",
    "universal-cookie": "^4.0.4",
    "uuid": "^8.3.2",
    "zx": "^6.0.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.0.1",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/crypto-js": "^4.1.0",
    "@types/node": "17.0.5",
    "@types/nprogress": "^0.2.0",
    "@types/react": "17.0.38",
    "@types/uuid": "^8.3.3",
    "autoprefixer": "^10.4.1",
    "eslint": "8.5.0",
    "eslint-config-next": "12.0.7",
    "husky": "^7.0.4",
    "lint-staged": ">=10",
    "next-sitemap": "^2.5.20",
    "postcss": "^8.4.5",
    "prettier": "^2.5.1",
    "tailwindcss": "^3.0.8",
    "typescript": "4.5.4"
  },
  "lint-staged": {
    "*.@(js|jsx|ts|tsx)": [
      "yarn format",
      "yarn format:check",
      "yarn lint",
      "bash -c \"yarn type:check\""
    ]
  }
}
